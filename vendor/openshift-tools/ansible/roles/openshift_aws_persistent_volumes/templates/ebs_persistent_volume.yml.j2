---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ item.volume.tags["Name"] }}
  labels:
    type: ebs
spec:
  capacity:
    storage: {{ item.volume.size }}Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  awsElasticBlockStore:
    volumeID: {{ item.volume.id }}
    fsType: ext4
